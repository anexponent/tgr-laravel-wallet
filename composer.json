{
    "name": "anexponent/laravel-wallet",
    "description": "A modern Laravel package providing a simple virtual wallet system.",
    "keywords": [
        "wallet",
        "laravel",
        "credits",
        "virtual-currency",
        "balance",
        "money"
    ],
    "homepage": "https://github.com/anexponent/laravel-wallet",
    "license": "MIT",
    "authors": [
        {
            "name": "Azeez Adesina",
            "email": "azeezadesina@yahoo.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/database": "^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Anexponent\\Wallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anexponent\\Wallet\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Anexponent\\Wallet\\WalletServiceProvider"
            ],
            "aliases": {
                "Wallet": "Anexponent\\Wallet\\WalletFacade"
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
